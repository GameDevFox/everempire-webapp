{
  "root": true,
  "env": {
    "browser": true,
    "mocha": true
  },
  "extends": [
    "xo-react/space",
    "xo-space/esnext"
  ],
  "parser": "babel-eslint",

  "rules": {
    "capitalized-comments": "off",
    "curly": "off",
    "keyword-spacing": ["error", {
      "overrides": {
        "for": { "after": false },
        "if": { "after": false },
        "switch": { "after": false },
        "while": { "after": false }
      }
    }],
    "new-cap": "off",
    "object-curly-spacing": ["error", "always"],
    "react/jsx-handler-names": ["error", {
        "eventHandlerPrefix": "on"
    }],
    "space-before-function-paren": ["error", "never"]
  }
}
